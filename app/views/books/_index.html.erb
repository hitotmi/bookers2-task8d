<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>

        <td id="favorite_buttons_<%= book.id %>">
　　　    <%= render "favorites/favorite", book: book %>
        </td>
        <td>
          <p>
            コメント数：<%= book.book_comments.count %>
          </p>
        </td>
        <td>
          <div id="index-raty"></div>
         <script>
          {
            let indexRateElement = document.querySelector('#index-raty');
            let indexOpt = {
              starOn: "<%= asset_path('star-on.png') %>",
              starOff: "<%= asset_path('star-off.png') %>",
              scoreName: 'book[star]',
              score: "<%= book.star %>",
            readOnly: true,
            };
           window.raty(indexRateElement, indexOpt);
         }
         </script>
         </td>
        </tr>
    <% end %>
  </tbody>
</table>